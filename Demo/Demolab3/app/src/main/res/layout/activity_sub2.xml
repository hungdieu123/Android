<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sub2Activity">


    <TextView
        android:text="Mời Bạn Nhập A,BC:"
        android:id="@+id/tvnhap"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tvnhap"
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:id="@+id/tvAr"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="A =" />

    <EditText
        android:layout_marginTop="56dp"
        android:id="@+id/edtA"
        android:layout_toRightOf="@+id/tvAr"
        android:layout_width="100dp"
        android:layout_height="40dp" />

    <TextView
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:id="@+id/tvB"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvAr"
        android:layout_marginTop="16dp"
        android:text="B =" />

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/edtB"
        android:layout_below="@+id/edtA"
        android:layout_toRightOf="@+id/tvB"
        android:layout_width="100dp"
        android:layout_height="40dp" />
    <TextView
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:id="@+id/tvC"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvB"
        android:layout_marginTop="16dp"
        android:text="C =" />

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/edtC"
        android:layout_below="@+id/tvB"
        android:layout_toRightOf="@+id/tvB"
        android:layout_width="100dp"
        android:layout_height="40dp" />
    <Button

        android:onClick="giaiPt"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:text="Kết Quả"
        android:layout_below="@+id/edtC"
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
